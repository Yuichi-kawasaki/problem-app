<% flash.each do |key, value| %>
  <div class="alert <%= bootstrap_class_for(key) %>" ><%= value %></div>
<% end %>

    <div class="timeline">
        <div class="link_to_new">
          <%= link_to "新しく困りごとを投稿する", new_problem_path %>
        </div>
        <h3>困り事一覧</h3>
<div class="alert alert-warning">
       <tbody>
          <% @problems.each do |problem| %>

          <div class="py-3 text-body">
          <tr>
             <td><strong>タイトル：<%= problem.title %></strong></td>
             <td>
               <div class="problem_image">
                 <% if problem.image.present? %>
                   <%= image_tag problem.image.url, width: '30%', height: '30%' %>
                 <% else %>
                   <%= image_tag("noimage.png", :size => "50x50") %>
                 <% end %>
               </div>
            </td>
             <td>内容：<%= problem.content %></td>
                <td><%= link_to "#{problem.user.name}のページ", user_path(problem.user.id),class:"btn btn-secondary btn-sm" %></td>
             <div class="mx-5" role="toolbar">
               <td><%= link_to '詳細を確認する', problem_path(problem.id),class:"btn btn-primary" %></td>
               <td><%= link_to '困りごとの編集', edit_problem_path(problem.id), class:"btn btn-success" %></td>
               <td><%= link_to '困りごとの消去', problem_path(problem.id), method: :delete, data: { confirm: '本当に消去しますか?' },class:"btn btn-danger" %></td>
             </div>
          </tr>
           <% end %>
          </div>
          </tbody>
    </div>
