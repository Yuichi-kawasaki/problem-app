<%= form_with(model: @problem, local: true, url:choose_new_or_edit) do |form| %>

<% if @problem.errors.any? %>
  <div id="error_explanation">
    <h2><%= @problem.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @problem.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="problem_title">
  <%= form.label :title,"タイトル" %>
  <%= form.text_field :title %>
</div>

<div class="problem_image">
  <%= form.label :image,"写真" %>
  <%= form.file_field :image %>
</div>

<div class="field">
  <%= form.label :title, "困り事種類:" %>
  <%= form.collection_check_boxes(:label_ids, Label.all, :id, :title) %>
</div>

<div class="problem_content">
  <%= form.label :content, "内容" %>
  <%= form.text_area :content, class:'form_control', rows: 10, placeholder: "コメントを書く"%>
</div>

<div class="submit">
  <%= form.submit "登録する", class:"button" %>
</div>

<% end %>

<div class="navbar">
  <%= link_to "一覧画面にもどる", problems_path %>
</div>
