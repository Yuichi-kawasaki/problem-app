<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class= "field">
    <% if @user.image.present? %>
     <p><%= image_tag(@user.image.url, :size => "50x50") %></p>
    <% else %>
     <p><%= image_tag("default.png", :size => "50x50") %></p>
    <% end %>
    <%= f.file_field :image, class:"image_upload" %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class= "field">
    <%= f.label :name, "お名前", class: "control-label" %>
    <%= f.text_field :name, placeholder: 'お名前' %><br>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email%><br>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password,  placeholder: '６文字以上で入力してください' %><br>
  </div>


  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>
  </div>

  <div class= "field">
    <%= f.label :gender, "性別", class:'gender_select', class: "control-label" %><br>
    <span><%= f.radio_button :gender, 1, class:"input-group-addon has-error" %></span>
    <span><%= f.label :gender, "男", class:"input-group-addon has-error" %></span>
    <span><%= f.radio_button :gender, 2, class:"input-group-addon has-error" %></span>
    <span><%= f.label :gender, "女", class:"input-group-addon has-error" %></span>
    <span><%= f.radio_button :gender, 3, class:"input-group-addon has-error" %></span>
    <span><%= f.label :gender, "カスタム", class:"input-group-addon has-error" %></span>
  </div>

  <div class= "field">
    <%= f.label :address,  "住所" %><br>
    <%= f.label :prefecture,  "都道府県", class:'pref_text' %>
    <span><%= f.text_field :prefecture, placeholder: 'お住まいの都道府県', class: "form-address has-error" %></span><br>
    <%= f.label :city, "市区町村", class:'city_text' %>
    <span><%= f.text_field :city, placeholder: 'お住まいの市区町村', class: "form-address has-error" %></span>
  </div>

  <div class= "field">
    <%= f.label :profession, "職業", class:'occu_text' %>
    <%= f.text_field :profession, placeholder: '職業', class: "form-occu has-error" %>
  </div>

  <div class= "field">
    <%= f.label :occupation, "職種", class:'occu_text' %>
    <%= f.text_field :occupation, placeholder: '職種', class: "form-occu has-error" %>
  </div>

  <div class= "field">
    <%= f.label :profile, "自己紹介文", class:'prof_text' %>
    <%= f.text_area :profile, placeholder: '自己紹介文を書く', rows: 10, class: "form-prof has-error" %>
  </div>


    <%= f.submit "新規登録", class:'button' %>
<% end %>

<%= render "users/shared/links" %>
